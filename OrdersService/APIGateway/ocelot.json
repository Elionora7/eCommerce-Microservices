                    "Host": "products-microservice",
                    "Port": 8080
                }
            ],
            "UpstreamHttpMethod": [
                "Get",
                "Post",
                "Put",
                "Options"
            ],
            "UpstreamScheme": "http",

            "QoSOptions": {
                "ExceptionsAllowedBeforeBreaking": 3,
                "DurationOfBreak": 100000,
                "TimeoutValue": 4000
            },

            "RetryOptions": {
                "RetryCount": 3,
                "RetryOnServerError": true
            },

            "RateLimitOptions": {
                "Limit": 3,
                "Period": "1m",
                "HttpStatusCode": 429,
                "EnableRateLimiting": true,
                "PeriodTimespan": 25,
                "ClientWhitelist": [
                    "Client1",
                    "Client2"
                ],
                "ClientIdHeader": "Client-Id"
            }
        },

        {
  
